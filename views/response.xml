<?xml version="1.0" encoding="UTF-8" ?>
<Response>
  <Gather action="/" method="POST" finishOnKey="#" timeout="120">
    <Say>{{title}}</Say>
    <Pause length="1"/>
    <Say>{{provenance}}</Say>
    <Pause length="1"/>
    <Say>{{{description}}}</Say>
    <Play>{{{bell_path}}}</Play>
    <Say>When you're ready, enter the code of your next item followed by the pound sign. Press 0 and pound for more options. We'll wait.</Say>
    <Play>{{{music_path}}}</Play>
  </Gather>
</Response>
